    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Текущий файл",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "zmTest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${defaultBuildTask}/zmTest",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "${defaultBuildTask}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "zmScheduler",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${defaultBuildTask}/zmScheduler",
            "args": [
                "-cp=localhost:4444",
                "-dbtp=PostgreSQL",
                "-dbcs=host=localhost port=5432 password=123 dbname=zmeyDb connect_timeout=10"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "${defaultBuildTask}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "zmWorker",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${defaultBuildTask}/zmWorker",
            "args": [
                "-cp=localhost:4445",
                "-scp=localhost:4444",
                "-log"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "${defaultBuildTask}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
